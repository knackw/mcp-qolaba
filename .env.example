# Qolaba API MCP Server - Environment Configuration Template
# Kopieren Sie diese Datei als .env und füllen Sie die Werte aus

# =============================================================================
# Qolaba API Configuration
# =============================================================================

# Qolaba API Key (erforderlich)
# Erhalten Sie Ihren API-Schlüssel von: https://docs.qolaba.ai/api-platform
QOLABA_API_KEY=your_qolaba_api_key_here

# Qolaba API Base URL (Standard: https://api.qolaba.ai/v1)
QOLABA_API_BASE_URL=https://api.qolaba.ai/v1

# API Request Timeout in Sekunden (Standard: 30)
QOLABA_TIMEOUT=30

# =============================================================================
# Server Configuration
# =============================================================================

# Server Environment (development, testing, production)
QOLABA_ENV=development

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Server Host (Standard: localhost)
SERVER_HOST=localhost

# Server Port (Standard: 8000)
SERVER_PORT=8000

# =============================================================================
# Request Handling Configuration
# =============================================================================

# Maximum number of retry attempts for API requests (Standard: 3)
RETRY_MAX_ATTEMPTS=3

# Backoff factor for exponential retry (Standard: 2.0)
RETRY_BACKOFF_FACTOR=2.0

# Rate limiting: requests per minute (Standard: 60)
RATE_LIMIT_PER_MINUTE=60

# Connection timeout in seconds (Standard: 10)
CONNECTION_TIMEOUT=10

# =============================================================================
# Security Configuration
# =============================================================================

# Enable SSL verification for API calls (true/false, Standard: true)
QOLABA_VERIFY_SSL=true

# JWT Secret Key für Session-Management (generieren Sie einen sicheren Schlüssel)
JWT_SECRET_KEY=your_jwt_secret_key_here

# =============================================================================
# Development & Debugging
# =============================================================================

# Enable debug mode (true/false, Standard: false in production)
DEBUG=false

# Enable request/response logging (true/false, Standard: false)
LOG_REQUESTS=false

# Enable performance metrics collection (true/false, Standard: true)
ENABLE_METRICS=true

# =============================================================================
# Database Configuration (falls benötigt)
# =============================================================================

# Database URL (für Session-Storage, falls implementiert)
# DATABASE_URL=sqlite:///./qolaba_mcp.db